{
  "name": "Muscle Password",
  "description": "Strong random password generator for Chrome extension",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Muscle Password",
    "default_popup": "index.html",
    "default_icon": "lock.png"
  },
  "icons": {
    "16": "lock.png",
    "48": "lock.png",
    "128": "lock.png"
  }
}